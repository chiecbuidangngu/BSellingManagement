@model BookSellingManagement.Models.Authors.AuthorModel


<title>Xem Thông Tin Tác Giả</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


<div class="container">
    <h2 class="text-center mt-4">Xem Thông Tin Sách</h2>

    <!-- Form to Add New Book -->
    <form asp-action="Details" enctype="multipart/form-data">
        <input type="hidden" asp-for="AuthorId" />

        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Tên Tác Giả</label>
                <input readonly asp-for="AuthorName" class="form-control">
    
            </div>
           
        </div>
        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Hình Ảnh</label>


                <img readonly src="~/images/@Model.Image" alt="@Model.AuthorName" class="img-fluid" style="width: 50px; height: auto;">

            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Mô Tả</label>
                <textarea readonly asp-for="Information" class="form-control" rows="5" id="Information"></textarea>
              
            </div>
        </div>
        <div class="mt-4">
            <a href="@Url.Action("Index", "Authors")">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>


<!-- JavaScript and Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="//cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

<script>
    CKEDITOR.replace('Information');

</script>


}
