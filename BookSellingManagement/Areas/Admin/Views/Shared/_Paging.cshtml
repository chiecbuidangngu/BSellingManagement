@model BookSellingManagement.Models.Paginate

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="1" asp-route-search="@ViewData["search"]">Trang đầu</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)" asp-route-search="@ViewData["search"]"> <i class="fa-solid fa-less-than"></i> </a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pg="@pge" asp-route-search="@ViewData["search"]">@pge</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-search="@ViewData["search"]"><i class="fa-solid fa-greater-than"></i> </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pg="@(Model.TotalPages)" asp-route-search="@ViewData["search"]">Trang cuối</a>
                </li>
            }
        </ul>
    }
</div>
