@model List<BookSellingManagement.Models.Book.BookModel>

<link rel="stylesheet" href="site.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<main class="container my-5">
    <h2 style="text-align: center;">Danh sách yêu thích</h2>
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted" style="text-align: center;">Bạn chưa có sách nào trong danh sách yêu thích.</p>
    }

    else
    {
        <div class="row" id="wishlist">
            @foreach (var book in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4 book-card" style="position: relative; max-height: 600px;">
                    <div class="card h-100">
                        <a href="@Url.Action("Details", "Books", new { BookId = book.BookId })" style="text-decoration:none">
                            <img src="~/images/@book.Image" class="card-img-top" alt="@book.BookName" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title" style="color:#495057;">@book.BookName</h5>
                                <p class="price mb-0 text-danger" style="text-align: center;">
                                    @book.Price.ToString("N0").Replace(",", ".")
                                </p>
                            </div>
                        </a>
                        <div class="card-footer d-flex justify-content-end">
                            <button class="btn btn-outline-danger btn-sm RemoveFromWishlist" data-book_id="@book.BookId">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>
