@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="centered-container" style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <div class="form-container" style="width: 100%; max-width: 500px; padding: 10px; border-radius: 8px;border-color: gray">
        <h2>Đổi mật khẩu</h2>
        <form asp-action="ChangePassword" asp-controller="Account" method="post">
        
            <div class="form-group">
                <label for="currentPassword">Mật khẩu hiện tại</label>
                <div class="input-group">
                    <input id="currentPassword" type="password" class="form-control" name="currentPassword" required />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i id="currentPasswordEye" class="fas fa-eye" onclick="togglePasswordVisibility('currentPassword', 'currentPasswordEye')"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group my-3">
                <label for="newPassword">Mật khẩu mới</label>
                <div class="input-group">
                    <input id="newPassword" type="password" class="form-control" name="newPassword" required />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i id="newPasswordEye" class="fas fa-eye" onclick="togglePasswordVisibility('newPassword', 'newPasswordEye')"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group my-3">
                <label for="confirmPassword">Xác nhận mật khẩu mới</label>
                <div class="input-group">
                    <input id="confirmPassword" type="password" class="form-control" name="confirmPassword" required />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i id="confirmPasswordEye" class="fas fa-eye" onclick="togglePasswordVisibility('confirmPassword', 'confirmPasswordEye')"></i>
                        </span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
        </form>
    </div>
</div>

<script>
    function togglePasswordVisibility(passwordFieldId, eyeIconId) {
        var passwordField = $('#' + passwordFieldId);
        var passwordType = passwordField.attr('type') === 'password' ? 'text' : 'password';
        passwordField.attr('type', passwordType);
        $('#' + eyeIconId).toggleClass('fa-eye fa-eye-slash');
    }
</script>
