@using BookSellingManagement.Models.OrderModel
@model IEnumerable<OrderModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<style>
    .table thead th {
        background-color: #007bff;
        color: #fff;
    }

    .modal-lg {
        max-width: 90%;
    }

    .table-responsive {
        overflow-x: auto;
    }


</style>

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header py-3 text-primary">
            <h4 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng của tôi</h4>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end mb-3">
                <input type="text" id="searchInput" class="form-control w-25 mr-2" placeholder="Tìm theo mã đơn hàng">
                
            </div>
            @if (Model == null || !Model.Any())
            {
                <p class="text-muted text-center">Bạn chưa có đơn hàng nào.</p>
            }
            else
            {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Trạng thái</th>
                            <th>Người đặt</th>
                            <th>Điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="bookTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("OrderDetail", "Account", new { OrderId = item.OrderId })">
                                        @item.OrderCode
                                    </a>
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="text text-danger">Đơn hàng mới</span>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <span class="text text-success">Đã thanh toán</span>
                                    }
                                    else if (item.Status == 3)
                                    {
                                        <span class="text text-warning">Đã hủy</span>
                                    }
                                    else if (item.Status == 4)
                                    {
                                        <span class="text text-primary">Đang giao hàng</span>
                                    }
                                    else if (item.Status == 5)
                                    {
                                        <span class="text text-success">Giao thành công</span>
                                    }
                                    else
                                    {
                                        <span class="text text-muted">Trạng thái không xác định</span>
                                    }
                                </td>
                                <td>@item.Username</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Address</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")</td>

                                <td>@item.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                    <td>
                                       
                                        @if (item.Status == 1) 
                                        {
                                            <a class="btn btn-warning btn-sm" asp-action="CancelOrder" asp-controller="Account" asp-route-OrderId="@item.OrderId">Hủy</a>
                                        }

                                        @if (item.Status == 4)
                                        {
                                            <a asp-action="ConfirmReceipt" asp-controller="Account" asp-route-OrderId="@item.OrderId" title="Xác nhận đã nhận hàng">
                                                <i class="bi bi-check text-success" style="font-size: 1.5rem; cursor: pointer;"></i>
                                            </a>
                                        }

                                    </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            }
        </div>
            
    </div>
</div>

<script>
    function searchOrders() {
        var searchTerm = document.getElementById('searchInput').value.toLowerCase();
        var rows = document.querySelectorAll("#bookTable tr");

        rows.forEach(function (row) {
            var orderCode = row.querySelector("td a").textContent.toLowerCase();
            if (orderCode.includes(searchTerm)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }

    document.getElementById('searchInput').addEventListener('input', searchOrders);
</script>
