@model UserModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="card" style="max-width: 700px; margin: 0 auto;">
    <div class="card-header text-center">
        <h5>Đăng Ký</h5>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
    <form asp-action="Register" enctype="multipart/form-data">
        <div class="card-body">
            <div class="mb-3">
                <label for="FullName">Họ và tên</label>
                <input asp-for="FullName" class="form-control" id="FullName" />
                <span asp-validation-for="FullName" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="Username">Tên người dùng</label>
                <input asp-for="Username" class="form-control" id="Username" />
                <span asp-validation-for="Username" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="Email">Email</label>
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="PhoneNumber">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="Address">Địa chỉ</label>
                <input asp-for="Address" class="form-control" id="Address" />
                <span asp-validation-for="Address" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="Password">Mật khẩu</label>
                <input asp-for="Password" class="form-control" id="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
          


            <button type="submit" class="btn btn-primary w-100 mt-3 btn-sm">Đăng Ký</button>
        </div>
    </form>
    <div class="mt-3 text-center">
        <span>Bạn đã có tài khoản?</span>
        <a href="#" style="text-decoration: none;"> Đăng nhập</a>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}