@model LoginViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="card" style="max-width: 700px; margin: 0 auto;">
    <div class="card-header text-center">
        <h5>Đăng Nhập</h5>
       
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Account" id="loginForm">
            <div class="mb-3">
                <label>Tên tài khoản</label>
                <input asp-for="Username" class="form-control form-control-sm" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" id="password" asp-for="Password" class="form-control form-control-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-2 text-end">
                <a asp-controller="Account" asp-action="ForgotPassword" style="text-decoration: none;">Quên mật khẩu?</a>
            </div>
            <button  class="btn btn-primary w-100 mt-3 btn-sm">Đăng Nhập</button>
        </form>
        <div class="mt-3" style="text-align: center;">
            <span>Bạn chưa có tài khoản?</span>
            <a asp-controller="Account" asp-action="Register" style="text-decoration: none;">Đăng ký ngay</a>
           
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}