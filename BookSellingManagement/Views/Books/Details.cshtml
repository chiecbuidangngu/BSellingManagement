@using BookSellingManagement.Models.Book

@{ 
    ViewData["Title"] = Model.BookName;
}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@await Html.PartialAsync("_NotificationPartial")
           
         <div class="modal-content">
            <div class="modal-header">
          
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/images/@Model.Image" alt="@Model.BookName" class="img-fluid" />
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="card-title">@Model.BookName</h2>
                    <button class="btn btn-default AddToWishlist" data-book_id="@Model.BookId" style="color: #0d6efd; font-size: 18px;">
                        <i class="fas fa-heart heart-icon2" style="font-size: 20px;"></i>
                    </button>
                        </div>
                      
                <h3 class="price">
                    @Model.Price.ToString("N0").Replace(",", ".")
                </h3>
                        <p><strong>Thể loại:</strong> @Model.Category.CategoryName</p>
                        <p><strong>Tác giả:</strong> @Model.Author.AuthorName</p>
                <p><strong>Số lượng còn trong kho:</strong> @Model.RemainingQuantity   </p>
                        <p><strong>Vị trí:</strong> @Model.Location</p>

                        <div class="d-flex align-items-center mb-4 pt-2">
                            <div class="input-group quantity me-3" style="width: 130px;">
                                <button class="btn btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <input id="Quantity" type="text" class="form-control text-center" value="1" style="border:none">
                                <button class="btn btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                    <button class="btn btn-primary px-3 AddToCart" data-book_id="@Model.BookId">
                        <i class="fa fa-shopping-cart me-1"></i> Thêm vào giỏ hàng
                    </button>
                
                  
                        </div>

                <p id="description" class="short-description">@Html.Raw(@Model.Description)</p>
          
                        <button id="toggleDescription" class="btn btn-link p-0" style="text-decoration:none">Xem thêm</button>
                    </div>
                </div>
            </div>


         </div>
       
       

    <script>
        $(document).ready(function () {
            $('.btn-plus').click(function () {
                var quantity = parseInt($('#Quantity').val());
                $('#Quantity').val(quantity + 1);
            });

            $('.btn-minus').click(function () {
                var quantity = parseInt($('#Quantity').val());
                if (quantity > 1) {
                    $('#Quantity').val(quantity - 1);
                }
            });
        });
    
</script>






