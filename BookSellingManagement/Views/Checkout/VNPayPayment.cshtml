<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@{
    ViewData["Title"] = "Thanh toán VNPay";
}

<div class="container mt-5">
    <h2 class="text-center">Thanh toán qua VNPay</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html" method="post">
              
                <div class="form-group">
                    <label for="orderCode">Mã đơn hàng</label>
                    <input type="text" class="form-control" id="orderCode" name="orderCode" value="@ViewBag.OrderCode" readonly />
                </div>

                <div class="form-group">
                    <label for="totalAmount">Tổng số tiền (VND)</label>
                    <input type="number" class="form-control" id="totalAmount" name="totalAmount" value="@ViewBag.TotalAmount" readonly />
                </div>

              
                <div class="form-group">
                    <label for="cardNumber">Số thẻ (Ví dụ số thẻ tín dụng)</label>
                    <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="Nhập số thẻ" required />
                </div>

                <div class="form-group">
                    <label for="cardHolder">Tên chủ thẻ</label>
                    <input type="text" class="form-control" id="cardHolder" name="cardHolder" placeholder="Tên chủ thẻ" required />
                </div>

                <div class="form-group">
                    <label for="expiryDate">Ngày hết hạn</label>
                    <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" required />
                </div>

                <div class="form-group">
                    <label for="cvv">CVV (Mã bảo mật thẻ)</label>
                    <input type="text" class="form-control" id="cvv" name="cvv" placeholder="Nhập CVV" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Thanh toán</button>
            </form>
        </div>
    </div>
</div>
